<!doctype html>
<html lang="pt-BR">

<head>
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Folha de Estilo CSS (Front-End) -->
    <link rel="stylesheet" href="/style.css">

    <!-- CDN Font Awesome (ícones) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Título do Projeto -->
    <title>To Do List - Project</title>
</head>

<body class="bg-dark">

    <header> <!-- Início do Header (Contendo o input e button de tarefas) -->

        <% if (task == null) { %>
        <h1>To Do List Project</h1>
        <form action="/create" method="post" class="input-group">
            <input type="text" name="task" id="task" placeholder="Adicione uma tarefa" class="form-control">
            <button type="submit" id="addButton" class="btn btn-primary">Adicionar</button>
        </form>
        <% } else { %>
        <h1>Editar Tarefa</h1>
        <form action="/updateOneTask/<%= task._id %>" method="post" class="input-group">
            <input type="text" name="task" id="task" value="<%= task.task %>" class="form-control">
            <button type="submit" id="updateButton" class="btn btn-primary">Atualizar</button>
        </form>
        <% } %>

    </header> <!-- Fim do Header -->
    
    <section id="tasks"> <!-- Início da Section (Conteúdo de edição e remoção de tarefas) -->

        <ul class="list-group">
            <% tasksList.forEach((task)=> { %>
            <li class="list-group-item">
                <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/getById/<%= task._id %>/update" class="btn btn-success btn-sm" role="button">Editar</a>
                    <a href="/getById/<%= task._id %>/delete" class="btn btn-danger btn-sm" role="button">Apagar</a>
                </div>
            </li>
            <% }); %>
        </ul>

    </section> <!-- Fim da Section -->

    <!-- Início do card de confirmação para remoção de tarefas -->
    <% if (taskDelete != null) { %>
    <section id="modal">

        <div id="card">
            <a href="/" class="btn-close btn-lg" aria-label="close" role="button"></a>
            <h2>Confirmação</h2>
            <hr>
            <p>Deseja realmente <span>deletar</span> a tarefa <%= taskDelete.task %>?</p>
            <a href="/" class="btn btn-danger btn-sm" role="button">Cancelar</a>
            <a href="/deleteOneTask/<%= taskDelete._id %>" class="btn btn-success btn-sm" role="button">Confirmar</a>
        </div>

    </section>
    <% } %>
    <!-- Fim do card de confirmação -->

    <!-- Rodapé -->
    <footer class="bg-dark text-center text-white">
        <div class="container p-4">
            <section class="mb-4"> <!-- Início dos menus sociais -->
                <!-- Instagram -->
                <a href="https://www.instagram.com/williianc/" class="btn btn-outline-light m-1" role="button" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <!-- Linkedin -->
                <a href="https://www.linkedin.com/in/willian-valentim/" class="btn btn-outline-light" role="button" target="_blank">
                    <i class="fa-brands fa-linkedin-in"></i>
                </a>
                <!-- GitHub -->
                <a href="https://github.com/w4lentim" class="btn btn-outline-light" role="button" target="_blank">
                    <i class="fa-brands fa-github"></i>
                </a>
            </section> <!-- Fim dos menus sociais -->

            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
                <p>Todos os direitos reservados &copy 2022 Copyright</p>
                <p>por Willian C. Valentim</p>
            </div>
        </div>

    </footer>







    <!-- Script (Front-End) -->
    <script src="/script.js"></script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
