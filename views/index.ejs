<!doctype html>
<html lang="pt-BR">

<head>
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Folha de Estilo CSS (Front-End) -->
    <link rel="stylesheet" href="/style.css">

    <!-- Título do Projeto -->
    <title>To Do List - Project</title>
</head>

<body>

    <header> <!-- Início do Header (Contendo o input e button de tarefas) -->

        <% if (task == null) { %>
        <h1>To Do List Project</h1>
        <form action="/create" method="post" class="input-group">
            <input type="text" name="task" id="task" placeholder="Adicione uma tarefa" class="form-control">
            <button type="submit" id="addButton" class="btn btn-primary">Adicionar</button>
        </form>
        <% } else { %>
        <h1>Editar Tarefa</h1>
        <form action="/updateOneTask/<%= task._id %>" method="post" class="input-group">
            <input type="text" name="task" id="task" value="<%= task.task %>" class="form-control">
            <button type="submit" id="updateButton" class="btn btn-primary">Atualizar</button>
        </form>
        <% } %>

    </header> <!-- Fim do Header -->
    
    <section id="tasks"> <!-- Início da Section (Conteúdo de edição e remoção de tarefas) -->

        <ul>
            <% tasksList.forEach((task)=> { %>
            <li>
                <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
                <a href="/getById/<%= task._id %>/update" class="btn btn-success m-1" role="button">Editar</a>
                <a href="/getById/<%= task._id %>/delete" class="btn btn-danger m-1" role="button">Apagar</a>
            </li>
            <% }); %>
        </ul>

    </section> <!-- Fim da Section -->

    <!-- Início do card de confirmação para remoção de tarefas -->
    <% if (taskDelete != null) { %>
    <section id="modal">

        <div id="card">
            <a href="/">X</a>
            <h2>Confirmação</h2>
            <hr>
            <p>Deseja realmente <span>deletar</span> a tarefa <%= taskDelete.task %>?</p>
            <a href="/">Cancelar</a>
            <a href="/deleteOneTask/<%= taskDelete._id %>">Confirmar</a>
        </div>

    </section>
    <% } %>
    <!-- Fim do card de confirmação -->







    <!-- Script (Front-End) -->
    <script src="/script.js"></script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
